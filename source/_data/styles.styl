code {
    color: #ccc;
    margin: 2px;
}
.deflaut, pre {
    margin: 5px 0;
    padding: 5px;
}

.highlight, pre, code {
    background: #3A3A3A !important;
}

.post-block {
    opacity: 0.9;
}
/* Sidebar Opacity */
.sidebar {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    opacity: 0.9;
    border-right: 2px solid #222;
}
